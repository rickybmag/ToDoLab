@model Employee

    <h2>Edit @Model.Name</h2>

    <form asp-action="UpdateEmployee" method="post">

        <label asp-for="Name" class="control-label">Name</label>
        <input asp-for="Name" class="form-control" value="@Model.Name" />
        <span asp-validation-for="Title" class="text-danger"></span>

        <label asp-for="Title" class="control-label">Title</label>
        <input asp-for="Title" class="form-control" value="@Model.Title" />
        <span asp-validation-for="Title" class="text-danger"></span>

        <label asp-for="Hours" class="control-label">Hours Working per Week</label>
        <input asp-for="Hours" class="form-control" value="@Model.Hours" />
        <span asp-validation-for="Hours" class="text-danger"></span>            

        <input type="submit" />
    </form>