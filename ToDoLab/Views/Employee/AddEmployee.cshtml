@model Employee

<h2>Add A New Employee</h2>
<br />
<form asp-action="AddEmployee" method="post">
    <label asp-for="Name" class="control-label"></label>
    <input placeholder="Name" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />
    <label asp-for="Title" class="control-label"></label>
    <input placeholder="Title" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />
    <label asp-for="Hours" class="control-label"></label>
    <input value="0" asp-for="Hours" class="form-control" />
    <span asp-validation-for="Hours" class="text-danger"></span>
    <br />

    <input type="submit" />
</form>
